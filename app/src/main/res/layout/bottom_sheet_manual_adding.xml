<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/actionBarItemBackground"
    app:behavior_hideable="true"
    app:behavior_peekHeight="10dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <View
        android:id="@+id/bottom_sheet_line"
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15_dp"
        android:drawableStart="@android:drawable/ic_menu_today"
        android:hint="@string/date"
        android:inputType="datetime|date"
        android:textSize="@dimen/recycler_item_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15_dp"
        android:drawableStart="@android:drawable/ic_menu_today"
        android:hint="@string/type_income_or_expense"
        android:textSize="@dimen/recycler_item_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_date" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_expense_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15_dp"
        android:drawableStart="@drawable/ic_expense_items"
        android:hint="@string/expense_item_edit_text"
        android:textSize="@dimen/recycler_item_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_type" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_debit_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15_dp"
        android:drawableStart="@android:drawable/ic_menu_today"
        android:hint="@string/debit_account_edit_text"
        android:textSize="@dimen/recycler_item_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_expense_item" />

        <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15_dp"
        android:drawableStart="@android:drawable/ic_menu_today"
        android:hint="@string/note_edit_text"
        android:textSize="@dimen/recycler_item_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_debit_account" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15_dp"
        android:drawableStart="@drawable/ic_bills_list"
        android:hint="@string/amount_edit_text"
        android:textSize="@dimen/recycler_item_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_note" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_expense_item"
        style="@style/MyThemeOrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15_dp"
        android:text="@string/save_expense_item"
        android:textSize="@dimen/loading_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_amount" />


</androidx.constraintlayout.widget.ConstraintLayout>
